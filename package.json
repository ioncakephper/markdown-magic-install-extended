{
  "name": "markdown-magic-install-extended",
  "version": "1.1.0",
  "description": "Extended INSTALL transform for markdown-magic that generates install instructions from package.json with flexible options",
  "keywords": [
    "markdown-magic",
    "markdown",
    "docs",
    "install",
    "transform",
    "plugin"
  ],
  "homepage": "https://github.com/ioncakephper/markdown-magic-install-extended#readme",
  "bugs": {
    "url": "https://github.com/ioncakephper/markdown-magic-install-extended/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ioncakephper/markdown-magic-install-extended.git"
  },
  "license": "MIT",
  "author": "Ion Gireada",
  "main": "index.js",
  "files": [
    "index.js",
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "markdown.config.js"
  ],
  "scripts": {
    "docs": "npx markdown-magic README.md --config ./markdown-magic.config.js",
    "fix": "npm run lint:fix && npm run format && npm run format:package",
    "format": "prettier --write .",
    "format:package": "prettier --write package.json",
    "lint": "eslint . --ext .js,.json,.yaml,.md",
    "lint:fix": "eslint . --ext .js,.json,.yaml,.md --fix",
    "test": "jest --passWithNoTests"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "eslint": "^9.37.0",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-yaml": "^1.1.3",
    "jest": "^30.2.0",
    "jsonc-eslint-parser": "^2.4.1",
    "markdown-eslint-parser": "^1.2.1",
    "markdown-magic-scripts": "^1.3.0",
    "prettier": "^3.6.2",
    "yaml-eslint-parser": "^1.3.0"
  },
  "scriptsMeta": {
    "docs": "Generate documentation in README.md",
    "fix": "Run linting and formatting fixes",
    "format": "Format all files using Prettier",
    "format:package": "Format package.json using Prettier",
    "lint": "Lint all .js, .json, .yaml, and .md files using ESLint",
    "lint:fix": "Lint and automatically fix issues in .js, .json, .yaml, and .md files using ESLint",
    "test": "Run tests using Jest"
  }
}
